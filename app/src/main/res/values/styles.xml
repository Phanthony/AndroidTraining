<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LightButtons">
        <item name="android:background">#f39e39</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LightTextEdit">
        <item name="android:backgroundTint" tools:targetApi="lollipop">#f39e39</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#666666</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="h3" parent="h2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h3link" parent="h3">
        <item name="android:textColor">#FF7C2392</item>
    </style>

    <style name="LoginDisplayText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="loginBoxDisplay">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#88404040</item>
    </style>

</resources>
