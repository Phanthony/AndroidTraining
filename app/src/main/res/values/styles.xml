<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LightBackground">
        <item name="android:background">#5dc3ef</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LightButtons">
        <item name="android:background">#f39e39</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LightTextEdit">
        <item name="android:backgroundTint" tools:targetApi="lollipop">#f39e39</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#666666</item>
    </style>

    <style name="RepoOB">

    </style>

</resources>
