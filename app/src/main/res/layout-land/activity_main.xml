<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="#FFF"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/OuterLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:targetApi="o">

    <androidx.appcompat.widget.Toolbar
            style="@style/ActionBar"
            android:id="@+id/ToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_percent="0.3"
            android:elevation="7dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintStart_toStartOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.14"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/maxRecyclerViewLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"
    />

    <TextView
            style="@style/h3"
            android:id="@+id/TrendingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topMargin"
            app:layout_constraintLeft_toLeftOf="@id/leftMargin"
            android:text="@string/trendingTitle"
    />



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/RecycleViewSwipeRefresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toBottomOf="@id/TrendingTitle"
            app:layout_constraintLeft_toLeftOf="@id/leftMargin"
            app:layout_constraintRight_toRightOf="@id/OuterLayout"
            app:layout_constraintBottom_toTopOf="@+id/maxRecyclerViewLength"
    >

        <androidx.recyclerview.widget.RecyclerView
                android:background="#fff"
                android:id="@+id/RepoList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
            android:id="@+id/TextViewRefreshTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/RecycleViewSwipeRefresh"
            app:layout_constraintRight_toRightOf="@+id/RecycleViewSwipeRefresh"
            app:layout_constraintLeft_toLeftOf="@+id/RecycleViewSwipeRefresh"
            android:layout_marginTop="7dp"
            android:textSize="14sp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
